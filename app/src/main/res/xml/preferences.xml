<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Workout">

        <ListPreference
            app:defaultValue="1"
            app:entries="@array/workout_entries"
            app:entryValues="@array/workout_values"
            app:key="differentWorkout"
            app:title="Different workouts"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="workoutPlan"
            app:title="Workout plan"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Other">

        <SwitchPreference
            android:defaultValue="false"
            android:key="dark_theme"
            android:summary="Requires a restart"
            android:title="Dark theme" />
    </PreferenceCategory>

    <Preference
        app:title="Clear database"
        app:key="clearDatabase">
    </Preference>
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="check_box_preference_1"
        android:title="Check box preference" />

</PreferenceScreen>
